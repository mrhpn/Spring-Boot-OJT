<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gic.mapper.AccountMapper">

	<select id="getAccountList" resultType="dto.AccountDTO">
		SELECT * FROM account
	</select>
	
	<insert id="register" parameterType="dto.AccountDTO">
		INSERT INTO account(name, role, password) VALUES (
			#{name},
			#{role},
			#{password}
		)
	</insert>
	
	<select id="getAccount" resultType="dto.AccountDTO" parameterType="dto.AccountDTO">
		SELECT * FROM account WHERE id = #{accountId}
	</select>
	
	<update id="update" parameterType="dto.AccountDTO">
		UPDATE account 
			SET name = #{name},
				role = #{role}
			WHERE id = #{id}
	</update>

	<delete id="delete" parameterType="int">
		DELETE FROM account WHERE id = #{id}
	</delete>
</mapper>